@model Aruuz.Models.Input

@{
    Layout = "~/Views/Shared/_Layout.BootstrapEditorTemplates.cshtml";

    if (!String.IsNullOrEmpty(Model.text))
    {
        ViewBag.Title = Model.text;
    }
    else
    {
        ViewBag.Title = "نتیجہ";
    }

}

@section meta{
    <meta name="description" content="Scansion of Urdu Poetry into meters and feet">
    <meta name="description" content="اردو شاعری کی تقطیع اور بحر اور وزن کی معلومات">
    @if (!String.IsNullOrEmpty(Model.text))
    {
        <meta name="description" content="@Model.text">
        <meta property="og:description" content="@Model.text" />
    }
    else
    {
        <meta name="description" content="خودکار تقطیع کار سافٹ ویئر کا نتیجہ">
        <meta property="og:description" content="خودکار تقطیع کار سافٹ ویئر کا نتیجہ" />
    }

    <meta name="keywords" content="عروض، اردو شاعری، شاعری، بحور، بحور فہرست، بحر ہزج، بحر رمل، بحر متقارب، میر ہندی بحر، بحر ہندی، بحر رمزمہ، متدارک بحر">
    <meta name="author" content="Sayed Zeeshan Asghar">
    <meta property="fb:admins" content="sayedzeeshan.asghar" />
    <meta property="fb:app_id" content="202167263310439" />
    <meta property="fb:profile_id" content="sayedzeeshan.asghar" />
    <meta property="og:type" content="aruuztaqti:poetry" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:image" content="/images/aruuz3.jpg" />

}
<style>
    .red {
        font-size: larger;
        color: #f7054c;
    }

    .green {
        color: #00ff21;
    }
</style>

<script>
    $(document).ready(function () {
        resultTaqti();
    });
</script>

<label class="hidden" id="inputCheckRes">@Model.isChecked.ToString()</label>
<label class="hidden" id="inputTextRes">@Model.text.ToString()</label>
<div class="container">
    <div class="container">
        <div class="urdu" id="detailsDiv">
            <div class="row">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h1 class="urdu-huge">ہدایات</h1>
                    </div>
                    <div class="panel panel-body">
                        <div class="col col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <tr>
                                        <td align="center">
                                            <span class="label label-default urdu-naskh">
                                                کچھ دیر انتظار فرمائیں۔ اشعار کا وزن نکالا جا رہا ہے۔
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="center">

                                            <img src="/icons/ajax-loader-big.gif" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
